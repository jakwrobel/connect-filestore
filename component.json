{
	"title": "Filestore API (Node.js)",
	"version": "0.0.64",
	"description": "elastic.io component for the Filestore API",
	"docsUrl": "",
	"buildType": "docker",
	"credentials": {
		"fields": {
			"resourceServerUrl": {
				"label": "Resource server URL",
				"required": true,
				"viewClass": "TextFieldView",
				"note": "Filestore server URL"
			},
			"apiKey": {
				"label": "API key",
				"required": true,
				"viewClass": "PasswordFieldView",
				"note": "Filestore API Key"
			},
			"tenantId": {
				"label": "Tenant ID",
				"required": true,
				"viewClass": "TextFieldView",
				"note": "DXP tenant id"
			}
		}
	},
	"triggers": {},
	"actions": {
		"getFile": {
			"main": "./lib/actions/getFile.js",
			"title": "Download file",
			"help": {
				"description": "fetches the file with the provided id",
				"link": "/components/filestore"
			},
			"metadata": {
				"in": "./lib/schemas/getFile.in.json"
			}
		},
		"updateFile": {
			"main": "./lib/actions/updateFile.js",
			"title": "Update file",
			"help": {
				"description": "Update a file with a specific ID",
				"link": "/components/filestore"
			},
			"metadata": {
				"in": "./lib/schemas/updateFile.in.json"
			}
		}
	}
}