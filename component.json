{
  "title": "Filestore API (Node.js)",
  "version": "0.0.5",
  "description": "elastic.io component for the Filestore API",
  "docsUrl": "",
  "buildType":"docker",
  "credentials": {
    "fields": {
      "apiKey": {
        "label": "API key",
        "required": true,
        "viewClass": "PasswordFieldView",
        "note": "Filestore API Key"
      },
      "tenantId": {
        "label": "Tenant ID",
        "required": true,
        "note": "DXP tenant id"
      }
    }
  },
  "triggers": {
    "getFile": {
      "main": "./lib/triggers/getFile.js",
      "type": "polling",
      "title": "Get file",
      "help": {
        "description": "Download a specific file from the filestore",
        "link": "/components/filestore-nodejs"
      },
      "fields": {
        "fileId": {
          "label": "File id",
          "required": true,
          "prompt": "Provide a file Id"
        }
      },
      "metadata": {
        "out": "./lib/schemas/getFile.out.json"
      }
    }
  },
  "actions": {
    "getFile": {
      "main": "./lib/actions/getPet.js",
      "title": "Get a file",
      "help": {
        "description": "Creates a pet and adds it to the shop",
        "link": "/components/petstore-nodejs"
      },
      "metadata": {
        "in": "./lib/schemas/createPet.in.json",
        "out": "./lib/schemas/createPet.out.json"
      }
    }
  }
}
