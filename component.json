{
	"title": "Filestore API (Node.js)",
	"version": "0.0.49",
	"description": "elastic.io component for the Filestore API",
	"docsUrl": "",
	"buildType": "docker",
	"credentials": {
		"fields": {
			"resourceServerUrl": {
				"label": "Resource server URL",
				"required": true,
				"viewClass": "TextFieldView",
				"note": "Filestore server URL"
			},
			"apiKey": {
				"label": "API key",
				"required": true,
				"viewClass": "PasswordFieldView",
				"note": "Filestore API Key"
			},
			"tenantId": {
				"label": "Tenant ID",
				"required": true,
				"viewClass": "TextFieldView",
				"note": "DXP tenant id"
			}
		}
	},
	"triggers": {},
	"actions": {
		"getFile": {
			"main": "./lib/actions/getFile.js",
			"title": "Download file",
			"help": {
				"description": "fetches the file with the provided id",
				"link": "/components/filestore"
			},
			"metadata": {
				"in": "./lib/schemas/getFile.in.json"
			}
		},
		"lookupFileById": {
			"main": "./lib/actions/lookupFileById.js",
			"title": "Lookup file by ID",
			"help": {
				"description": "fetches the file data, based on the specific file id",
				"link": "/components/filestore"
			},
			"metadata": {
				"in": "./lib/schemas/lookupFileById.in.json",
				"out": "./lib/schemas/lookupFileById.out.json"
			}
		},
		"uploadFile": {
			"main": "./lib/actions/uploadFile.js",
			"title": "Upload file",
			"help": {
				"description": "upload a file",
				"link": "/components/filestore"
			},
			"metadata": {
				"in": "./lib/schemas/uploadFile.in.json"
			}
		},
		"deleteFileById": {
			"main": "./lib/actions/deleteFileById.js",
			"title": "Delete file by ID",
			"help": {
				"description": "delete file with the specific id",
				"link": "/components/filestore"
			},
			"metadata": {
				"in": "./lib/schemas/deleteFileById.in.json"
			}
		}
	}
}